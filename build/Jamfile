      <define>BOOST_REQUESTS_SOURCE=1
      <define>BOOST_FILESYSTEM_NO_DEPRECATED=1
      <define>BOOST_JSON_SOURCE
    : usage-requirements
      <link>shared:<define>BOOST_REQUESTS_DYN_LINK=1
      <link>static:<define>BOOST_REQUESTS_STATIC_LINK=1
    : source-location ../src
    ;


